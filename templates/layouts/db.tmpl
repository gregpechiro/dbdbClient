    <li class="active">{{ .db | title }}</li>
{{ end }}

{{ define "left-sidebar" }}
    {{ template "all-store-sidebar" . }}
{{ end }}

{{ define "content" }}
    <div class="col-lg-offset-2 col-lg-7">
